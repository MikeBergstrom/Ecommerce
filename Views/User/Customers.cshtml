@{
    ViewData["Title"] = "Customers";
}
<div class="row">
    <div class="col-sm-8">
        <p><a href="/">Dashboard</a>  |  <a href="/Products">Products</a>  |  <a href="/Orders">Orders</a>  |  Customers  |  <a href="/Settings">Settings</a></p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <form asp-controller="User" asp-action="Add" method="Post">
            <div class="form-group">
                <label>Customer Name: </label>
                <input class="form-control" type="text" name="Name">
            </div>
            <input class="form-control" type="submit" value="Add">
        </form>
        <p style="color:red;">@ViewBag.error</p>
    </div>
</div>
<div class="row">
    <table class="table">
        <tr>
            <th>Customer Name</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
        @foreach(var user in @ViewBag.users){
            <tr>
                <td>@user.Name</td>
                <td>@user.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td><a href="/deleteUser/@user.UserId">Delete</a></td>
            </tr>
        }
    </table>
</div>